
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="width:100%;height:106px;"></div>

<h2>Add New Project To Portfolio</h2>

<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<form action="/Portfolio/Add" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Project Name" name="p_name">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Project Description" name="p_description">
			</div>
			<div class="form-group">
				<label for="project_image">Select Project Image</label>
				<input type="File" class="form-control" id="project_image" name="p_image">
			</div>
			<button type="submit" class="btn btn-success">Add Project</button>
		</form>
	</div>
</div>

<style>
	h2{
		text-align: center;
		margin-top: 20px;
	}
	.copyright{
		position:fixed;
		bottom:0;
		left:0;
		width: 100%;
	}
</style>
