@{
	ViewBag.Title = "Select";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="width:100%;height:106px;"></div>

<h2>All Projects In Portfolio</h2>

<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<br />
		<a class="btn btn-dark" href="/Portfolio/Add">Add Project</a>
		<a class="btn btn-dark" href="/Portfolio/Index">Go To Website</a>
		<br /><br />
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>ID</th>
					<th>Project Name</th>
					<th style="width: 660px;">Project Description</th>
					<th>Image</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in ViewBag.Portfolios)
			{
				<tr>
					<td>#@item.id</td>
					<td>@item.project_name</td>
					<td>@item.project_description</td>
					<td>
						<img src="~/Uploads/@item.project_img" alt="@item.project_name" width="150" />
					</td>
					<td>
						<a href="/Portfolio/Delete/@item.id" title="Delete @item.project_name" class="btn btn-danger">Delete</a>
					</td>
				</tr>
		}
			</tbody>
		</table>
		<br /><br /><br /><br /><br /><br /><br /><br />
	</div>
</div>

<style>
	h2 {
		text-align: center;
		margin-top: 20px;
	}

	.copyright {
		position: fixed;
		bottom: 0;
		left: 0;
		width: 100%;
	}
</style>
